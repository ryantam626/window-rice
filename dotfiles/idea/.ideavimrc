" Better search defaults
set hlsearch
set incsearch
set ignorecase
set smartcase

let mapleader = " "
" Escape to clean highlights
nnoremap <silent> <esc> <esc>:noh<return><esc>
nnoremap <silent> <leader>ac :%y<CR>

set clipboard^=unnamedplus,unnamed

set highlightedyank
set surround
set noideajoin


" Make jupyter support a little bit better by providing way to jump to
" top/bottom of cell
nmap ]c <Action>(EditorPageDown)
nmap [c <Action>(EditorPageUp)
vmap ]c <Action>(EditorPageDownWithSelection)
vmap [c <Action>(EditorPageUpWithSelection)
